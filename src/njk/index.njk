{% extends '_layouts/base.njk' %}

{% block page_title %}New index page title{% endblock %}

{% block content %}

<div class="container">

  <div class="row">
    <div class="col-12 col-sm-6 col-md-8 offset-md-2">
    <h1>An Introduction</h1>
      <p>
        Welcome to my blog! <a href="detail-page.html">links to detail page</a> Here I will be cataloguing my travels on my beloved ship, The Mayflower Corsair. 
      </p>
        {% for entry in data.entries %}
          <h3 class="entry-headline"><a href="{{ entry.url }}">{{ entry.title }}</a></h3>
          <p class="entry-date">{{ entry.date }}</p>
          <hr>
        {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
